<% title "Attachment" %>

<p>
  <strong>Name:</strong>
  <%= @attachment.name %>
</p>

<p>
  <%= link_to "(fullscreen)", @attachment.document.fullscreen_url %>
</p>

<p>
  <%== @attachment.document.display_ipaper unless @attachment.document.blank? %>
</p>

<p>
  <%= link_to "Edit", edit_attachment_path(@attachment) %> |
  <%= link_to "Destroy", @attachment, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", attachments_path %>
</p>
